#include <stdio.h>

int main() {
    int fact, n, i, j;
    unsigned long factorial;
    double e = 1.0;

    printf("請輸入一個整數 fact (<13): ");
    scanf_s("%d", &fact);

    factorial = 1;
    for (i = 1; i <= fact; i++) {
        factorial *= i;
    }

    printf("%d 的階乘值為: %lu\n", fact, factorial);


    printf("請輸入項目數量 n (<13): ");
    scanf_s("%d", &n);

    for (i = 1; i <= n; i++) {
        unsigned long temp = 1;
        for (j = 1; j <= i; j++) {
            temp *= j;
        }
        e += 1.0 / temp;
    }

    printf("e 的近似值為: %.10f\n", e);

    return 0;
}
